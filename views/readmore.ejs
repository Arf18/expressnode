<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>new Article</title>


    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200&family=Open+Sans:ital,wght@0,300;0,400;1,400&display=swap" rel="stylesheet">    
</head>


<style>
    body{
        background-color: #333333;
        font-family: 'Courier New', Courier, monospace;
    }
    h1{
        margin:20px;
        margin-bottom: 0px;
        color:white;
        position: relative;
        margin-left: 100px;
        font-size: 40px;
       
    }
    .container{
        width:100%;

    }
    .container .page{
        color:white;
        width:70%;
        display: inline-block;
        margin-left:50px;
        margin-right:50px;
        position: relative;
        left:5%;
        

    }
    .page .markdown{
        color:white;
        margin-top:60px;
        width:100%;
        position: relative;
        overflow: hidden;
        word-wrap: break-word;
        white-space: inherit;
        -webkit-line-clamp: 2; 
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;    

    }
    
    #description{
        color:white;
        margin-top:60px;
        width:100%;
        position: relative;
        overflow: hidden;
        word-wrap: break-word;
        white-space: inherit;
        -webkit-line-clamp: 2; 
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;   
    }
    .page.description p{
        margin-left:30px;
               display: block;
            line-height: 16px; 
            margin-right:20px;
    
            
    }
    #date{
        color:rgba(255, 255, 255, 0.7);
        font-weight: bold;
        margin-left:105px;
        margin-bottom: 0px;
    }
    #des{
        margin-left:30px;
        
    }
    p{
        line-height: 25px;
        font-weight: 800;
        color: #d8d8d8d9;
    }

    textarea{
        width:95%;
        height: 100px;
        background-color: #333333;
        color:rgba(255, 255, 255, 0.919);
        outline: none;
        border: none;
        overflow-x: hidden;
        resize: none;
        font-size: larger;
        line-height: 2;
        direction: ltr;
        
    }
    
    textarea::-webkit-scrollbar {
        width: 8px; 
        background-color: #7777; 
        border-radius: 20px;             /* width of the entire scrollbar */

    }

    textarea::-webkit-scrollbar-track {
        background: none;        /* color of the tracking area */
        
    }

    textarea::-webkit-scrollbar-thumb {
        background-color: rgba(65, 64, 64, 0.864);    /* color of the scroll thumb */
        border-radius: 20px;       /* roundness of the scroll thumb */
          /* creates padding around scroll thumb */
    }

    button{
        padding:10px;
        padding-left:20px;
        padding-right: 20px;
        margin-top: 30px;;
        background-color: #f34a4a;
        color:#222222;
        font-size: 17px;
        border: none;
        border-radius: 5px;
        font-weight: bolder;
    }
    button:hover{
        box-shadow: 0 0 10px #f34a4a;
        background-color: #f34a4a;
    }
    .img{
        width:100px;
        height:100px;
        background-color: red;
    }
    img{
        width:500px;
        height:500px;

    }
        
    
</style>
<script src=""></script>
<body>


<div class="container">

    <h1 id="newarticle"><%=title[0].title%></h1>
    <p id ="date">Date:<%=title[0].date.toLocaleDateString()%></p>
    <div class="page">

        <button onclick="hi()" id = "btn" value = "english">english</button>
        <div  id="description">
            <h2 style="color:#f34a4a">Description</h2>
            <textarea dir = "ltr"  id ="txta"  readonly><%=title[0].description%></textarea>
        </div>
        
        <div class="markdown">
            <h2 style="color: #f34a4a;">Mark Down</h2>
            <textarea dir="ltr"  id="txta2" readonly ><%=title[0].mark%></textarea>
        </div>
    </div>
</div>




</body>
    <script>
        let cmd = document.getElementById("txta");
        cmd.style.height = cmd.scrollHeight+"px";
        cmd.addEventListener("input" , adjust);
        function adjust(){
            this.style.height = auto;
            this.style.height = (this.scrollHeight)+"px";
        }
        cmd2 = document.getElementById("txta2");
        cmd2.style.height = cmd2.scrollHeight+"px";
        cmd2.addEventListener("input" , adjust2);
        function adjust2(){
            this.style.height = auto;
            this.style.height = (this.scrollHeight)+"px";
        }

        let btn = document.getElementById("btn");
        function hi(){
            if(btn.textContent == "arabic"){
                console.log(true)
                btn.textContent = "english";
                cmd.style.direction="ltr";
                cmd2.style.direction="ltr";
                btn.style.backgroundColor = "#f34a4a"
                btn.style.boxShadow = "0 0 10px #f34a4a"

            }
            else if(btn.textContent == "english"){
         

                console.log(true)
                btn.textContent = "arabic";
                cmd.style.fontFamily = "font-family: 'Cairo', sans-serif"
                cmd2.style.fontFamily = "font-family: 'Cairo', sans-serif"

                cmd.style.direction="rtl";
                cmd2.style.direction="rtl";
                btn.style.backgroundColor = "#8CC152"
                btn.style.boxShadow = "0 0 10px #8CC152"

            }
        }
        
    </script>

</html>